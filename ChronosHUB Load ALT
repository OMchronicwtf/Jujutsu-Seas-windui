local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()

local success, result1 = pcall(function()
    return loadstring(game:HttpGet("https://github.com/OMchronicwtf/Jujutsu-Seas-windui/raw/refs/heads/main/0%20webcheck"))()
end)
if not success then
    warn("meow")
    return
end

-- Custom Theme
WindUI:AddTheme({
    Name = "E-vil Royal",
    Accent = WindUI:Gradient({
        ["0"] = { Color = Color3.fromHex("#360273"), Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#042444"), Transparency = 0 },
    }, { Rotation = 45 }),
    Background = WindUI:Gradient({
        ["0"] = { Color = Color3.fromHex("#360273"), Transparency = 0 },
        ["100"] = { Color = Color3.fromHex("#042444"), Transparency = 0 },
    }, { Rotation = 45 }), -- Added to ensure gradient applies to window background
    Dialog = Color3.fromHex("#1a1a1d"),
    Outline = Color3.fromHex("#FFD700"),
    Text = Color3.fromHex("#FFFFFF"),
    Placeholder = Color3.fromHex("#c0a763"),
    Button = Color3.fromHex("#292133"),
    Icon = Color3.fromHex("#FFD700")
})
WindUI:SetTheme("E-vil Royal")

-- Main Window
local Window = WindUI:CreateWindow({
    Title = "ChronosHUB",
    Icon = "moon-star",
    Author = "by @wtfchronic",
    Folder = "ChronosHUB",
    Size = UDim2.fromOffset(580, 460),
    MinSize = Vector2.new(560, 350),
    MaxSize = Vector2.new(850, 560),
    Transparent = true,
    Theme = "E-vil Royal",
    Resizable = true,
    SideBarWidth = 200,
    BackgroundImageTransparency = 0.3,
    HideSearchBar = false,
    ScrollBarEnabled = true,
    User = {
        Enabled = true,
        Anonymous = false,
        Callback = function()
            print("User button clicked")
        end,
    },
})

-- Edit OpenButton
Window:EditOpenButton({
    Title = "ChronosHUB",
    Icon = "moon",
    CornerRadius = UDim.new(0,16),
    StrokeThickness = 2,
    Color = ColorSequence.new(
        Color3.fromHex("#574094"),
        Color3.fromHex("#FFD700")
    ),
    OnlyMobile = false,
    Enabled = true,
    Draggable = true,
})

-- Disable Fullscreen Button
Window:DisableTopbarButtons({"Fullscreen"})

-- Add a version tag above the tab
Window:Tag({
    Title = "v2.2.0",
    Color = Color3.fromHex("#FFD700"),  -- muted purple for subtlety
    Radius = 13,
})

local InfoTab = Window:Tab({
    Title = "Info",
    Icon = "info",
    Locked = false
})

InfoTab:Select()

local WarningParagraph = InfoTab:Paragraph({
    Title = "STOP EXPLOITING IN PUBLIC LOBBIES!",
    Desc = "5 people have been reported in the Jujutsu Seas Discord for autofarming with my script:\n\n• PunkRockerSupe\n• Omegamine004\n• OrcaAV03\n• ioriwoo2 (I know you use my script)\n• BlvckyiieYT\n\nPrivate Servers are currently free, use them to not draw attention. Thanks <3",
    Color = "Red",
    Locked = false
})

local DiscordJoinParagraph = InfoTab:Paragraph({
    Title = "Join my Discord for early access updates!",
    Desc = "Stay updated with new versions, fixes, and beta features!\n\nClick the button below to copy the invite link!",
    Locked = false,
    Buttons = {
        {
            Icon = "copy", -- Lucide icon
            Title = "Copy Invite",
            Callback = function()
                setclipboard("https://discord.gg/fu9fH2trGT")
                WindUI:Notify({
                    Title = "Copied!",
                    Content = "Discord invite link has been copied to your clipboard.",
                    Duration = 5,
                    Icon = "copy",
                })
            end,
        }
    }
})

local ChangelogsTab = Window:Tab({
    Title = "Changelogs",
    Icon = "logs",
    Locked = false
})

local ChangelogSection = ChangelogsTab:Section({
    Title = "Changelogs"
})

local ChangelogParagraph = ChangelogsTab:Paragraph({
    Title = "BETA 1",
    Desc = "Included Dynamically-loading Teleport tabs. Currently capable of teleporting to NPCs within each island.\n\nCurrently does not cover version 2.20",
    Locked = false
})

local ChangelogParagraph = ChangelogsTab:Paragraph({
    Title = "V2.2.0",
    Desc = "Added 'Auto-Apply (Smart)' to the Stats Tab.\n\nFixed Semantic Versioning",
    Locked = false
})

local ChangelogParagraph = ChangelogsTab:Paragraph({
    Title = "V2.1.0",
    Desc = "Returned to a 2-day Key-system.",
    Locked = false
})

local ChangelogParagraph = ChangelogsTab:Paragraph({
    Title = "V2.0.0",
    Desc = "Full remake with the WindUI, with various bugs fixed.\n\nAll new enemies & shop items have been updated.\n\nCertain features are still not finished, script will be keyless untill I can be bothered to finish. ",
    Locked = false
})

Window:Divider()
